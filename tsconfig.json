{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],
      "@helpers": ["helpers"],
      "@helpers/*": ["helpers/*"],
      "@themes": ["themes"],
      "@themes/*": ["themes/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@validators": ["validators"],
      "@validators/*": ["validators/*"],
      "@contexts": ["contexts"],
      "@contexts/*": ["contexts/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite-plugin-svgr/client"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
